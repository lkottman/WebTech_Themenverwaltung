<!--Formular zur Erstellung des Präsentationstmerins-->
<form method="post" action="http://127.0.0.1:8080/generatePresentation" id="generateDay">

    <h2>Erstellung eines Präsentationstermins</h2>

    <fieldset>

        <label for="enterDate">Datum:</label>
        <input type="date" name="Date" id="enterDate" class="expand"
               placeholder="2020-04-20">

        <label for="enterDayStart">Start:</label>
        <input type="time" name="DayStart" id="enterDayStart"
               class="expand"
               placeholder="08:15">

        <label for="enterDayEnd">Ende:</label>
        <input type="time" name="DayEnd" id="enterDayEnd"
               class="expand"
               placeholder="11:30">

        <label for="enterRoom">Raum:</label>
        <input type="text" name="room" id="enterRoom" class="expand" placeholder="KD 301">

        <label for="enterAnlass">Anlass:</label>
        <input type="text" name="anlass" id="enterAnlass" class="expand" placeholder="Abschlusspräsentation">


        <input type="submit"  value="Erstellen" onclick="setPresentationDay()">

    </fieldset>
    <input type="hidden" name="date" id="date">
    <input type="hidden" name="start" id="start">
    <input type="hidden" name="end" id="end">
    <input type="hidden" name="room" id="room">
    <input type="hidden" name="anlass" id="anlass">

</form>

<!--Formular zum Anlegen von Gruppen-->
<form>
    <h2>Anlegen der Gruppen</h2>
    <fieldset>
        <!--Gruppennummer-->
        <label for ="enterGroupNumber">Gruppennummer</label>
        <input type="number" name="Member" id="enterGroupNumber" class="expand"
               placeholder="1" value="">
        <!--Thema-->
        <label for ="enterTheme">Thema:</label>
        <input type="text" name="Theme" id="enterTheme" class="expand"
               placeholder="Thema" value="">
        <!--Mitglieder-->
        <label for="enterNumber">Anzahl der Mitglieder</label>
        <input type="number" name="Number" id="enterNumber" class="expand"
               placeholder="4" value="">
        <!--Startzeit-->
        <label for ="enterStartTime">Startzeit:</label>
        <input type="time" name="StartTime" id="enterStartTime" class="expand"
               placeholder="8:15" value="">
        <!--Dauer-->
        <label for ="enterDuration">Dauer:</label>
        <input type="time" name="Duration" id="enterDuration" class="expand"
               placeholder="00:15" value="">
        <!--Endzeit-->

        <label for ="enterEnde">Endzeit:</label>
        <input type="time" name="endTime" id="enterEnde" class="expand"
               placeholder="08:30" value="">

        <!--Button zum Anlegen einer Gruppe-->
        <input type="button" value="Hinzufügen" onclick="addGroup(); getGroups();">
    </fieldset>
</form>


